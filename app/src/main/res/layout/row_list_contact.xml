<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativeLayout_contact"
        android:layout_height="70dp"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_contact"
            android:layout_width="50dp"
            android:src="@mipmap/avatar"
            app:civ_border_width="0dp"
            app:civ_border_color="#FF000000"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView_karma_title"
            android:layout_alignStart="@+id/textView_karma_title"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:text="anna-haro@android.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_phone_email"
            android:textColor="@color/dark"
            android:textSize="15sp"
            android:typeface="sans"
            android:paddingRight="20dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/textView_name"
            android:layout_alignLeft="@+id/textView_name"
            android:maxLines="1" />

        <TextView
            android:text="Anna Haro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:id="@+id/textView_name"
            android:textColor="@color/dark"
            android:textSize="17sp"
            android:typeface="sans"
            android:paddingRight="20dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@+id/imageView_contact"
            android:layout_toRightOf="@+id/imageView_contact"
            android:layout_toEndOf="@+id/imageView_contact"
            android:maxLines="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/selector"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/imageView_selector" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/transparent_camera"
        android:layout_below="@+id/relativeLayout_contact"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout_seperate"
        android:layout_marginLeft="20dp"
        android:layout_height="1dp">

    </RelativeLayout>

</LinearLayout>
