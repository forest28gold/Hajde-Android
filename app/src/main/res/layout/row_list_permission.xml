<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativeLayout_perm"
        android:background="@color/white"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/imageView_perm"
            android:layout_width="40dp"
            android:src="@mipmap/perm_camera"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView_karma_title"
            android:layout_alignStart="@+id/textView_karma_title"
            android:layout_marginLeft="25dp"
            android:layout_height="40dp" />

        <TextView
            android:text="Camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:id="@+id/textView_perm"
            android:textColor="@color/comui_tab_text_color"
            android:textSize="17sp"
            android:typeface="sans"
            android:paddingRight="20dp"
            android:layout_marginStart="18dp"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView_perm"
            android:layout_toEndOf="@+id/imageView_perm" />


    </RelativeLayout>

</LinearLayout>
